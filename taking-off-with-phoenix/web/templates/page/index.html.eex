<div class="jumbotron">
  <%= if @current_user do %>
    <h2><%= gettext "Welcome to %{name}", name: @current_user.name %></h2>
    <p class="lead">A productive web framework that<br />does not compromise speed and maintainability.</p>
  <%= else %>
    <h2><%= gettext "Welcome to %{name}", name: "Guest!!" %></h2>
    <p class="lead">A productive web framework that<br />does not compromise speed and maintainability.</p>
  <%= end %>
</div>